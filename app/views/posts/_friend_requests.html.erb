<div class="card " >
  <div class="card-header bg-success bolder text-light">
    Friend Requests
  </div>
  <ul class="list-group list-group-flush">
    <% if !@incoming_requests.empty?%>
      <% @incoming_requests.each do |request|  %>
        <li class="list-group-item">
          <%= request.name%>
          <span class="float-right">
            <%= link_to friendships_update_path(id: request.id), method: :patch do %>
            <i class="far fa-check-circle"></i>
          <%end%>
            <%=link_to friendships_destroy_path(id:request.id), method: :delete do %>
              <i class="far fa-times-circle"></i>
          <%end%>
          </span>
        </li>
      <%end%>
    <%else%>
      <li class="list-group-item">No new friend request!</li>
    <%end%>
  </ul>
</div>
